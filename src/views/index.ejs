<%- include('partials/_header'); %>

  <div class="container">
    <div class="row">
      <div class="col-md-5 mt-4">
        <div class="card">
          <div class="card-body">
            <form action="/add" method="POST">
              <div class="form-group">
                <input type="text" name="title" placeholder="insert title" class="form-control">
              </div>
              <div class="form-group">
                <textarea name="description" class="form-control" placeholder="Description"></textarea>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Add</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-7 mt-4">
        <table class="table bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Description</th>
              <th>Operations</th>
            </tr>
          </thead>
          <tbody>
            <% tasks.forEach((item, i) => { %>
            <tr>
              <th><%= i + 1 %></th>
              <th><%= item.title %></th>
              <th><%= item.description %></th>
              <th>
                <a href="/update/<%= item._id%>" class="btn btn-sm <%= item.status ?  'btn-success' : 'btn-dark' %>">Done</a>
                <a href="/delete/<%= item._id%>" class="btn btn-danger btn-sm">Delete</a>
                <a href="/edit/<%= item._id%>" class="btn btn-info btn-sm">Edit</a>
              </th>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%- include('partials/_footer') %>